<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1"
           fx:controller="controller.ControllerProducto">
    <children>
        <AnchorPane fx:id="root" prefHeight="445.0" prefWidth="396.0" style="-fx-border-color: White;"
                    stylesheets="@../css/style.css">
            <children>
                <Pane fx:id="pnIngresoTrabajador" layoutX="4.0" layoutY="6.0" prefHeight="439.0" prefWidth="388.0"
                      style="-fx-background-color: #02030A;" stylesheets="@../css/style.css">
                    <children>
                        <Label layoutX="14.0" layoutY="20.0" text="Ingreso de productos" textFill="#e7e5e5">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="txtNombre" layoutX="74.0" layoutY="132.0" prefHeight="30.0" prefWidth="256.0"
                                   promptText="Nombres Producto"
                                   style="-fx-prompt-text-fill: WHITE; -fx-font-size: 1.2em; -fx-text-fill: WHITE;"
                                   stylesheets="@../css/style.css"/>
                        <Button fx:id="btnGuardarProduc" layoutX="14.0" layoutY="354.0" mnemonicParsing="false"
                                onAction="#cliksProductos" prefHeight="53.0" prefWidth="156.0" text="Guardar"/>
                        <Button fx:id="btnDarDeBajaProduc" layoutX="191.0" layoutY="354.0" mnemonicParsing="false"
                                onAction="#cliksProductos" prefHeight="53.0" prefWidth="156.0"
                                stylesheets="@../css/style.css" text="Dar de baja"/>
                        <TextField fx:id="txtprecio" layoutX="75.0" layoutY="190.0" prefHeight="30.0" prefWidth="256.0"
                                   promptText="Precio Unitario"
                                   style="-fx-prompt-text-fill: WHITE; -fx-font-size: 1.2em; -fx-text-fill: WHITE;"
                                   stylesheets="@../css/style.css"/>
                        <TextField fx:id="txtFecha" layoutX="75.0" layoutY="244.0" prefHeight="30.0" prefWidth="255.0"
                                   promptText="Fecha "
                                   style="-fx-prompt-text-fill: WHITE; -fx-font-size: 1.2em; -fx-text-fill: WHITE;"
                                   stylesheets="@../css/style.css"/>
                        <TextField fx:id="busquedaProducto" layoutX="105.0" layoutY="62.0" prefHeight="38.0"
                                   prefWidth="269.0" promptText="Buscar Producto"
                                   style="-fx-background-color: #02030A; -fx-font-size: 1.2em; -fx-border-color: #B7C3D7; -fx-border-radius: 2em;"/>
                        <ImageView fitHeight="35.0" fitWidth="29.0" layoutX="42.0" layoutY="70.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@../images/icons8_Search_52px.png"/>
                            </image>
                        </ImageView>
                    </children>
                </Pane>
            </children>
        </AnchorPane>
    </children>
</StackPane>
